<UserControl
    x:Class="Hotel_Una.Views.CalendarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:Hotel_Una.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading}"
            Text="Kalendar Rezervacija" />
        <StackPanel
            Grid.Row="1"
            Margin="0,12,0,0"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Background="Transparent" Command="{Binding LastMonthCommand}">
                <fa:ImageAwesome Width="10" Icon="ChevronLeft" />
            </Button>
            <TextBlock
                Margin="8,0,8,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="{StaticResource DarkColorBrush}"
                Text="{Binding CurrentMonth, Mode=OneWay}" />
            <Button Background="Transparent" Command="{Binding NextMonthCommand}">
                <fa:ImageAwesome Width="10" Icon="ChevronRight" />
            </Button>
        </StackPanel>
        <ListView
            Grid.Row="3"
            Margin="0,24,0,0"
            ItemsSource="{Binding Weeks}">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Sunday}"
                        Header="Nedelja" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Monday}"
                        Header="Ponedeljak" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Tuesday}"
                        Header="Utorak" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Wednesday}"
                        Header="Srijeda" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Thursday}"
                        Header="Četvrtak" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Friday}"
                        Header="Petak" />
                    <GridViewColumn
                        Width="80"
                        DisplayMemberBinding="{Binding Saturday}"
                        Header="Subota" />
                </GridView>
            </ListView.View>
        </ListView>
        <!--<DataGrid Grid.Row="3" Margin="0, 24, 0, 0" ItemsSource="{Binding Weeks}">
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="80" Header="Nedelja" Binding="{Binding Sunday}"/>
                <DataGridTextColumn MinWidth="80" Header="Ponedeljak" Binding="{Binding Monday}"/>
                <DataGridTextColumn MinWidth="80" Header="Utorak" Binding="{Binding Tuesday}"/>
                <DataGridTextColumn MinWidth="80" Header="Srijeda" Binding="{Binding Wednesday}"/>
                <DataGridTextColumn MinWidth="80" Header="Četvrtak" Binding="{Binding Thursday}"/>
                <DataGridTextColumn MinWidth="80" Header="Petak" Binding="{Binding Friday}"/>
                <DataGridTextColumn MinWidth="80" Header="Subota" Binding="{Binding Saturday}"/>
            </DataGrid.Columns>
        </DataGrid>-->
    </Grid>
</UserControl>
